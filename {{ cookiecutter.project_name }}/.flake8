; following: https://black.readthedocs.io/en/stable/guides/using_black_with_other_tools.html
[flake8]
max-line-length = 88

; W503 - line break before binary operator
ignore = E203, W503

exclude =
    .devcontainer \
    .git \
    .gitignore \
    .gitattributes \
    .vscode \
    poetry.lock \
    .pytest_cache \
    .git \
    __pycache__ \
    build \
    docs
